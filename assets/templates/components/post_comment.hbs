<!--#Comments-->
<ul class="media-list">
        <li class="media">
            <a class="pull-left" href="#">
                <img class="media-object" {{bind-attr src="user.photo"}}>
            </a>

            <div class="media-body">
                <div class="comment-head">
                    <h4 class="media-heading">{{user.name}}</h4>

                    <div class="date">{{date unit.postedAt 'lll'}}</div>
                </div>
                {{#if editMode}}
                    <p>{{edit-textarea value=unit.text class="edit-state"}}</p>
                    <div class="comment-actions">
                        <a {{action "completeEditing"}} class="btn btn-primary" href="#">
                            <i class="fa fa-check fa-lg"></i>
                        </a>
                    </div>
                {{else}}
                    <p>{{unit.text}}</p>
                    {{#if editAvailable}}
                        <div class="comment-actions">
                            <a {{action "deleteComment"}} href="#">Delete</a> |
                            <a {{action "startEditing"}} href="#">Edit</a>
                        </div>
                    {{/if}}
                {{/if}}
