<div class="blog-content blog-items">
    <div class="span8">

        {{#if items.length}}
            <!-- Carousel -->
            <div id="myCarousel" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Carousel items -->
                <div class="carousel-inner">
                    <div class="active item"><img src="img/blog/carousel/691x431.gif" alt="" /></div>
                    <div class="item"><img src="img/blog/carousel/691x431.gif" alt="" /></div>
                    <div class="item"><iframe src="http://player.vimeo.com/video/62122063?title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff" class="iframe_single_page"></iframe></div>
                </div>
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev"><i class="icon-angle-left"></i></a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next"><i class="icon-angle-right"></i></a>
            </div>
            <!-- Carousel end -->
        {{else}}
            <div class="item">
                <img {{bind-attr src="cover"}} alt="" />
            </div>
        {{/if}}

        <div class="block step editing">
            <div class="header">
                <div>
                    <label for="editTitle">Title:</label>
                    {{edit-text value=title class="edit-state" id="editTitle"}}
                </div>
            </div>
            <div class="area">
                <div>
                    <label for="editDescr">Description:</label>
                    {{edit-text value=description class="edit-state" id="editDescr"}}
                </div>
                <div>
                    <label for="editCat">Category:</label>
                    {{edit-text value=category class="edit-state" id="editCat"}}
                </div>
                <div>
                    <label for="editCover">Cover:</label>
                    {{view Blog.FileUploadView id="editCover" class="edit-state" name="editCover" contentBinding="content"}}
                </div>
                <label for="editPost">Post:</label>
                {{wysiwyg-editor content=text header="Edit"}}
                <a {{action "createUnit"}} class="btn btn-primary" href="#">
                    <i class="icon-ok icon-large"></i></a>
            </div>
        </div>
    </div>
</div>