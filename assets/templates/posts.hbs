<div class="cont-outer">
    <div class="row-fluid blog single">

        {{outlet}}

        <!-- Right Side -->
        <div class="span4 right-side">

            {{#if isAdmin}}
                <!-- New post -->
                <div class="block step blog-item visible-desktop visible-tablet">

                    {{#link-to 'posts.create' class="btn btn-success"}} <i class="icon-plus-sign icon-white"></i>
                        New Post
                    {{/link-to}}
                </div>
            {{/if}}


            <!-- Search -->
            <div class="block step visible-desktop visible-tablet">
                <form class="form-search">
                    {{view Ember.TextField value=keyword placeholder="Search..." classNames="span12 search-query"}}
                    <!--<input type="text" placeholder="Search..." class="span12 search-query">-->
                    <button {{action 'search'}}><i class="icon-search"></i></button>
                </form>
            </div>
            <!-- Search end -->


            <!-- Categories -->
            <div class="block step visible-desktop visible-tablet">
                <div class="header">
                    <h3>Category</h3>
                </div>

                <div class="area categories">
                    <ul>
                        {{#each staticCategory in controller.staticCategories}}
                            {{post-category currentCategory=currentCategory staticCategory=staticCategory}}
                        {{/each}}
                    </ul>
                </div>
            </div>
