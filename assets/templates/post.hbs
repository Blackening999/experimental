<h1>{{title}}</h1>
<div class="sep20"></div>
<div class="blog-content blog-items">
    <div class="span8">

        <!-- Mobile Hidden Elements -->

        <!-- Search -->
        <div class="block step blog-item hidden-desktop hidden-tablet">
            <form class="form-search">
                {{view Ember.TextField value=keyword placeholder="Search..." classNames="span12 search-query"}}
                <!--<input type="text" placeholder="Search..." class="span12 search-query">-->
                <button {{action 'search'}}><i class="icon-search"></i></button>
            </form>
        </div>
        <!-- Search end -->


        <!-- Categories -->
        <!--<div class="block step blog-item hidden-desktop hidden-tablet">-->
            <!--<select name="categories">-->
                <!--<option>Branding</option>-->
                <!--<option>Web Design</option>-->
                <!--<option>Photography</option>-->
                <!--<option>Illustration</option>-->
                <!--<option>Ar—Åhitecture</option>-->
                <!--<option>Logos</option>-->
            <!--</select>-->
        <!--</div>-->
        <!-- Categories end -->

        <!-- Mobile Hidden Elements end -->

        {{#if items.length}}
            <!-- Carousel -->
            <div id="myCarousel" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Carousel items -->
                <div class="carousel-inner">
                    <div class="active item"><img src="img/blog/carousel/691x431.gif" alt="" /></div>
                    <div class="item"><img src="img/blog/carousel/691x431.gif" alt="" /></div>
                    <div class="item"><iframe src="http://player.vimeo.com/video/62122063?title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff" class="iframe_single_page"></iframe></div>
                </div>
                <!-- Carousel nav -->
                <a class="carousel-control left" href="#myCarousel" data-slide="prev"><i class="icon-angle-left"></i></a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next"><i class="icon-angle-right"></i></a>
            </div>
            <!-- Carousel end -->
        {{else}}
            <div class="item">
                <img {{bind-attr src="cover"}} alt="" />
            </div>
        {{/if}}

        {{post-full unit=post parentController=controller completeEditing="editPost"}}

        <!-- Comments -->
        <div class="block step">
            <div class="header">
                <h3>{{comments.length}} Comment{{pluralize comments.length}}</h3>
            </div>
            <div class="area">
                {{#each comment in comments}}
                    {{post-comment unit=comment currentUser=user completeEditing="editComment" deleteComment="deleteComment"}}
                {{else}}
                    <h4> There's no comments yet </h4>
                {{/each}}
            </div>
         </div>

        <!-- Comments form -->
        {{#if authenticated}}
            {{partial "post/form"}}
        {{else}}
            <div class="block step clearfix">
                <h5> If you want to leave comment, {{#link-to 'login'}}login{{/link-to}} please </h5>
            </div>
        {{/if}}
    </div>
</div>